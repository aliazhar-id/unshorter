{
  "name": "unshorter",
  "version": "1.2.1",
  "description": "Minimalist and lightweight URL unshortener for Node.js",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "prepublishOnly": "npm run build",
    "test": "npm run build -- --watch src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aliazhar-id/unshorter.git"
  },
  "keywords": [
    "unshort",
    "unshorter",
    "unshorten",
    "unshort-url"
  ],
  "author": {
    "name": "aliazhar",
    "email": "email@aliazhar.my.id",
    "url": "https://aliazhar.my.id"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/aliazhar-id/unshorter/issues"
  },
  "homepage": "https://github.com/aliazhar-id/unshorter#readme",
  "devDependencies": {
    "@types/node": "^18.7.2",
    "tsup": "^6.2.2",
    "typescript": "^4.7.4"
  }
}